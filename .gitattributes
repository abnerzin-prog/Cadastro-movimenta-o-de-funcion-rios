# Mini ERP de Estoque - Sistema de Cadastro de Produtos

# Estrutura para armazenar os produtos (lista de dicion√°rios)
estoque = []

def cadastrar_produto():
    print("\nüì¶ Cadastro de Produto")
    nome = input("Nome do produto: ")
    categoria = input("Categoria: ")
    preco = float(input("Pre√ßo (R$): "))
    quantidade = int(input("Quantidade inicial: "))

    produto = {
        "id": len(estoque) + 1,
        "nome": nome,
        "categoria": categoria,
        "preco": preco,
        "quantidade": quantidade
    }

    estoque.append(produto)
    print(f"‚úÖ Produto '{nome}' cadastrado com sucesso!\n")

def excluir_produto():
    print("\nüóëÔ∏è Excluir Produto")
    identificador = input("Digite o ID ou nome do produto que deseja excluir: ")

    for produto in estoque:
        if str(produto["id"]) == identificador or produto["nome"].lower() == identificador.lower():
            estoque.remove(produto)
            print(f"‚ùå Produto '{produto['nome']}' removido com sucesso!\n")
            return
    print("‚ö†Ô∏è Produto n√£o encontrado.\n")

def relatorio_produtos():
    print("\nüìä Relat√≥rio de Produtos Cadastrados")
    if not estoque:
        print("Nenhum produto cadastrado.\n")
        return

    for produto in estoque:
        alerta = "‚ö†Ô∏è ESTOQUE BAIXO" if produto["quantidade"] < 5 else ""
        print(f"ID: {produto['id']} | Nome: {produto['nome']} | "
              f"Categoria: {produto['categoria']} | "
              f"Pre√ßo: R$ {produto['preco']:.2f} | "
              f"Quantidade: {produto['quantidade']} {alerta}")
    print()

def menu():
    while True:
        print("====== MENU ERP ESTOQUE ======")
        print("1 - Cadastrar produto")
        print("2 - Excluir produto")
        print("3 - Relat√≥rio de produtos")
        print("4 - Sair")
        opcao = input("Escolha uma op√ß√£o: ")

        if opcao == "1":
            cadastrar_produto()
        elif opcao == "2":
            excluir_produto()
        elif opcao == "3":
            relatorio_produtos()
        elif opcao == "4":
            print("üëã Saindo do sistema... At√© logo!")
            break
        else:
            print("‚ö†Ô∏è Op√ß√£o inv√°lida, tente novamente.\n")

# In√≠cio do programa
menu()
